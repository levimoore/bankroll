<div class="container-br">
<div class="container">
<div class="row">
<div class="col-md-6 col-md-offset-3">
<h3>Log In</h3>
</div>
</div>
<form {{action 'authenticate' on='submit'}}class="form-horizontal" role='form'>
  <div class='form-group'>
<div class="row">
<label class="col-sm-5 control-label"for="identification"><p class='lead'>Please enter your email.</p></label>
<div class="col-sm-4">
  {{input id='identification' classNames="form-control" placeholder='Enter email address' value=identification}}
  </div>
</div>
  <label class="col-sm-5 control-label" for="password"><p class='lead'>Please enter your password.</p></label>
  <div class="col-sm-4">
  {{input id='password' classNames="form-control" placeholder='Enter Password' type='password' value=password}}
    </div>
</div>
<div class="col-sm-10">
<button type="submit" class="btn btn-custom pull-right">Log In</button>
</div>

</form>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
    {{#if error}}
      <div class="alert alert-warning">
        <div class="alert-title"><h4>Oops, there was a problem:</h4></div>
        <h5>{{error.message}}</h5>
      </div>
    {{/if}}
</div>
</div>
</div>
</div>